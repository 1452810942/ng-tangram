{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../../dist/@ng-tangram/components/",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@ng-tangram/animate/*": ["../../../out-tsc/@ng-tangram/animate/*"],
      "@ng-tangram/components/*": ["../../../out-tsc/@ng-tangram/components/*"]
    }
  },
  "files": ["public-api.ts"],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "components.js",
    "flatModuleId": "@ng-tangram/components",
    "fullTemplateTypeCheck": true
  }
}
