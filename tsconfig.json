{
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@ng-tangram/*": ["src/libs/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
