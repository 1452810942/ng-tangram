{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "paths": {
      "@ng-tangram/example": ["./src/libs/example"],
      "@ng-tangram/components": ["./src/libs/components"],
      "@ng-tangram/components/*": ["./src/libs/components/*"],
      "@ng-tangram/markdown": ["./src/libs/markdown"],
      "@ng-tangram/markdown/editor": ["./src/libs/markdown/editor"],
      "@ng-tangram/moment-adapter": ["./src/libs/moment-adapter"],
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  // "include": ["libs/*"],
}
