{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2016", "es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@ng-tangram/*": ["packages/*"],
      "@modules/*": ["src/modules/*"],
      "@app/*": ["src/app/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "packages"
  ]
}
