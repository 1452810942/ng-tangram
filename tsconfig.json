{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "lib": ["es2016", "es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@ng-tangram/*": ["src/libs/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": ["node_modules"]
}
