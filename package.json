{
  "name": "ng-tangram",
  "version": "0.6.0-rc.4",
  "description": "NG-TANGRAM",
  "repository": {
    "type": "git",
    "url": "https://github.com/livebridge-lab/ng-tangram"
  },
  "scripts": {
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "start": "ng serve",
    "build": "npm run build:components && npm run build:markdown && npm run build:moment-adapter",
    "build:components": "ng build components --prod",
    "build:markdown": "ng build markdown --prod",
    "build:moment-adapter": "ng build moment-adapter --prod",
    "postbuild:components": "node scripts/post-build.js components",
    "postbuild:markdown": "node scripts/post-build.js markdown",
    "postbuild:moment-adapter": "node scripts/post-build.js moment-adapter",
    "build-docs": "npm run build-docs:browser && npm run build-docs:server",
    "build-docs:browser": "ng build --prod",
    "build-docs:server": "ng run ng-tangram-docs:server:production && tsc -p tsconfig.server.json",
    "server": "node docs/server",
    "publish": "npm run publish:components && npm run publish:markdown && npm run publish:moment-adapter",
    "publish:components": "cd dist/@ng-tangram/components && npm publish && cd ../../../",
    "publish:markdown": "cd dist/@ng-tangram/markdown && npm publish && cd ../../../",
    "publish:moment-adapter": "cd dist/@ng-tangram/moment-adapter && npm publish && cd ../../../"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "scope": {
        "required": true,
        "allowed": [
          "components",
          "markdown",
          "moment-adapter",
          "example"
        ],
        "validate": true,
        "multiple": true
      }
    }
  },
  "dependencies": {
    "@angular/animations": "^9.0.0",
    "@angular/cdk": "^9.0.0",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/forms": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/platform-server": "^9.0.0",
    "@angular/router": "^9.0.0",
    "@fortawesome/fontawesome-free": "latest",
    "@nguniversal/express-engine": "^9.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^9.0.0",
    "blueimp-load-image": "^2.19.0",
    "codemirror": "^5.46.0",
    "codemirror-minified": "^5.48.0",
    "core-js": "^3.4.1",
    "date-fns": "^1.30.1",
    "express": "^4.16.3",
    "foundation-sites": "^6.6.1",
    "ghooks": "^2.0.4",
    "marked": "^0.8.0",
    "moment": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^9.0.0-beta.1",
    "@angular-devkit/build-angular": "^0.900.1",
    "@angular-devkit/build-ng-packagr": "^0.900.1",
    "@angular-devkit/core": "^9.0.1",
    "@angular-devkit/schematics": "^9.0.1",
    "@angular/cli": "^9.0.1",
    "@angular/compiler-cli": "^9.0.0",
    "@types/codemirror": "^0.0.74",
    "@types/express": "^4.17.1",
    "@types/marked": "^0.7.2",
    "@types/node": "^11.9.5",
    "@types/nprogress": "^0.0.29",
    "@types/prismjs": "^1.16.0",
    "ajv": "^6.9.2",
    "camelcase": "^5.0.0",
    "codelyzer": "^5.2.0",
    "conventional-changelog": "^3.1.12",
    "cz-conventional-changelog": "3.0.2",
    "dompurify": "^2.0.7",
    "glob": "^7.1.3",
    "highlightjs": "^9.12.0",
    "husky": "^3.0.9",
    "jsdom": "^15.2.1",
    "kramed": "^0.5.6",
    "ng-packagr": "^9.0.0",
    "nprogress": "^0.2.0",
    "prismjs": "^1.17.1",
    "ts-loader": "^6.2.1",
    "tsickle": "^0.38.0",
    "tslib": "^1.10.0",
    "tslint": "^5.13.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.5",
    "validate-commit-msg": "^2.14.0"
  }
}
